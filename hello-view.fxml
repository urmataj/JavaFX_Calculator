<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="280.0" prefWidth="280.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_calculator.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label prefHeight="0.0" prefWidth="110.0" text="Calculator">
      <font>
         <Font size="20.0" />
      </font>
      <VBox.margin>
         <Insets left="5.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="-10.0" left="7.0" right="5.0" top="-5.0" />
      </padding>
   </Label>
    <TextField fx:id="inputField" prefHeight="26.0" prefWidth="240.0" />
   <FlowPane hgap="20.0" prefHeight="225.0" prefWidth="212.0" vgap="20.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onButtonOneClick" prefHeight="40.0" prefWidth="40.0" text="1">
            <FlowPane.margin>
               <Insets left="3.0" />
            </FlowPane.margin></Button>
         <Button mnemonicParsing="false" onAction="#onButtonTwoClick" prefHeight="40.0" prefWidth="40.0" text="2" />
         <Button mnemonicParsing="false" onAction="#onButtonThreeClick" prefHeight="40.0" prefWidth="40.0" text="3" textAlignment="CENTER" />
         <Button onAction="#onPlusButtonClick" prefHeight="40.0" prefWidth="40.0" text="+">
            <FlowPane.margin>
               <Insets />
            </FlowPane.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onButtonFourClick" prefHeight="40.0" prefWidth="40.0" text="4">
            <FlowPane.margin>
               <Insets left="3.0" />
            </FlowPane.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onButtonFiveClick" prefHeight="40.0" prefWidth="40.0" text="5" />
         <Button mnemonicParsing="false" onAction="#onButtonSixClick" prefHeight="40.0" prefWidth="40.0" text="6" />
         <Button mnemonicParsing="false" onAction="#onMinusButtonClick" prefHeight="40.0" prefWidth="40.0" text="-" />
         <Button mnemonicParsing="false" onAction="#onButtonEightClick" prefHeight="40.0" prefWidth="40.0" text="8">
            <FlowPane.margin>
               <Insets left="3.0" />
            </FlowPane.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onButtonSevenClick" prefHeight="40.0" prefWidth="40.0" text="7" />
         <Button mnemonicParsing="false" onAction="#onButtonNineClick" prefHeight="40.0" prefWidth="40.0" text="9" />
         <Button mnemonicParsing="false" onAction="#onMultiplicationButtonClick" prefHeight="40.0" prefWidth="40.0" text="*" />
         <Button mnemonicParsing="false" onAction="#onButtonClearClick" prefHeight="40.0" prefWidth="40.0" text="ะก">
            <FlowPane.margin>
               <Insets bottom="5.0" left="3.0" />
            </FlowPane.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onButtonZeroClick" prefHeight="40.0" prefWidth="40.0" text="0">
            <FlowPane.margin>
               <Insets bottom="5.0" />
            </FlowPane.margin>
         </Button>
          <Button onAction="#onEqualButtonClick" prefHeight="40.0" prefWidth="40.0" text="=">
            <FlowPane.margin>
               <Insets bottom="5.0" />
            </FlowPane.margin></Button>
         <Button mnemonicParsing="false" onAction="#onDivisionButtonClick" prefHeight="40.0" prefWidth="40.0" text="/">
            <FlowPane.margin>
               <Insets bottom="5.0" />
            </FlowPane.margin></Button>
      </children>
      <padding>
         <Insets left="6.0" />
      </padding>
   </FlowPane>
</VBox>
